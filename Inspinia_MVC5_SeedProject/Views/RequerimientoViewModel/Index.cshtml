@model PissanoApp.ViewModels.RequerimientoViewModel

@{
    ViewBag.Title = "Index";
}

@Html.HiddenFor(model => model.TipoCompra.tipoCompraId)


<h2>Requerimientos de Compra</h2>



<p>
    @*<a href="@Url.Action("RequerimientoViewModel/1", "RequerimientoViewModel")" class="btn btn-w-m btn-primary">Nuevo Requerimiento de Materiales</a>*@
    <a href="~/RequerimientoViewModel/Create/@Html.DisplayFor(model => model.TipoCompra.tipoCompraId)" class="btn btn-w-m btn-primary"> Nuevo Requerimiento </a>
</p>

@*<p>
    <a href="@Url.Action("Create/2", "RequerimientoViewModel")" class="btn btn-w-m btn-primary">Nuevo Requerimiento de SubContratos</a>
</p>*@

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Requerimientos de compra. Use el Filtro de Búsqueda</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>

                    </div>
                </div>

                <div class="row">

                    <div class="col-sm-3">
                        <div class="form-group">
                            <label class="control-label" for="status">Obra</label>
                            @Html.DropDownList("col1_filter", (IEnumerable<SelectListItem>)ViewBag.obraId, "Todos", new { @class = "form-control column_filter", @data_column = "1" })

                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label class="control-label" for="quantity">Req.</label>
                            <input type="text" id="col0_filter" name="col0_filter" data-column="0" value="" placeholder="Requerimiento" class="form-control column_filter">
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label class="control-label" for="status">Estado</label>
                            @Html.DropDownList("col7_filter", (IEnumerable<SelectListItem>)ViewBag.estadoOrdenId, "Todos", new { @class = "form-control column_filter", @data_column = "7" })

                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label class="control-label" for="status">OC</label>
                            <select class="form-control column_filter " id="col12_filter" data-column="12">
                                <option value="" selected="selected">Todos</option>
                                <option value="CO">Con Orden</option>
                                <option value="SO">Sin Orden</option>
                            </select>

                        </div>
                    </div>
                </div>

                <div class="ibox-content">

                    <table class="table table-striped table-bordered table-hover dataTables-example" id="tableRequerimientos">
                        
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Obra</th>
                                <th>Fecha</th>
                                <th>Prioridad</th>
                                <th>Creado por</th>
                                <th>Items</th>
                                <th>Tipo de Compra</th>
                                @*<th>Orden Compra</th>*@
                                <th>Estado</th>
                                <th>Materiales</th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th hidden="hidden"></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.Requerimientos)
                            {

                                <tr class="gradeX">
                                    <td>@Html.DisplayFor(modelItem => item.requerimientoId)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Obra.nombre)</td>
                                    <td>@Html.DisplayFor(modelItem => item.fechaCreacion)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Prioridad.nombre)</td>
                                    <td>@Html.DisplayFor(modelItem => item.usuarioCreacion)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Detalles.Count)</td>
                                    <td>@Html.DisplayFor(modelItem => item.TipoCompra.nombre)</td>

                                    @*@if (item.ordenGenerada == false)
                        {
                        <td class="client-status"><span class="label label-warning">En espera</span></td>
                        }
                        else
                        {
                            <td class="client-status">
                                <a href="/OrdenCompra/Document/@Html.DisplayFor(modelItem => item.OrdenCompras[0].ordenCompraId)" class="label label-primary">@Html.DisplayFor(modelItem => item.OrdenCompras[0].numero) </a>
                            </td>

                        }*@

                                    @if (item.EstadoRequerimiento.nombre == "Pendiente Aprobación")
                                    {
                                        <td class="client-status"><span class="label label-danger">@Html.DisplayFor(modelItem => item.EstadoRequerimiento.nombre)</span></td>
                                    }
                                    else if (item.EstadoRequerimiento.nombre == "Aprobado Total")
                                    {
                                        <td class="client-status"><span class="label label-primary">@Html.DisplayFor(modelItem => item.EstadoRequerimiento.nombre)</span></td>
                                    }
                                    else
                                    {
                                        <td class="client-status"><span class="label label-warning">@Html.DisplayFor(modelItem => item.EstadoRequerimiento.nombre)</span></td>
                                    }

                                    @{var materiales = "";
                                      var longitud=0;

                                    foreach (var item2 in item.Detalles)
                                    {
                                        if (item2.Material.nombre.Length>=5)
                                        {
                                            longitud = (item2.Material.nombre.Length - (item2.Material.nombre.Length - 5));
                                        }
                                        else
                                        {
                                            longitud = (item2.Material.nombre.Length);
                                        }
                                        materiales = materiales + item2.Material.nombre.Substring(0, longitud) + "..., ";

                                    }
                                    }
                                    <td>@materiales </td>
                                    <td>
                                        <a href="~/Requerimiento/Document/@Html.DisplayFor(modelItem => item.requerimientoId)" class="btn btn-white btn-sm"><i class="fa fa-print"></i> Imprimir </a>
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="~/Requerimiento/Tracking/@Html.DisplayFor(modelItem => item.requerimientoId)" data-toggle="modal" data-target="#myModalTracking" class="btn btn-white btn-sm" id="linkTracking"><i class="fa fa-binoculars"></i>  </a>
                                            <a href="~/Requerimiento/Zoom/@Html.DisplayFor(modelItem => item.requerimientoId)" data-toggle="modal" data-target="#myModalZoom" class="btn btn-white btn-sm" id="linkZoom"><i class="fa fa-search-plus"></i>  </a>
                                        </div>
                                    </td>

                                    <td>

                                        @*@Html.ActionLink("Editar", "Edit", new { id = item.requerimientoId }) |
                            @Html.ActionLink("Detalles", "Details", new { id = item.requerimientoId }) |*@

                                        @if (item.EstadoRequerimiento.nombre == "Pendiente Aprobación" || item.EstadoRequerimiento.nombre == "Aprobado Parcial" || item.EstadoRequerimiento.nombre == "Aprobado Total")
                                        {
                                            <a href="~/RequerimientoViewModel/Edit/@Html.DisplayFor(modelItem => item.requerimientoId)" class="btn btn-white btn-sm"> Modificar </a>
                                            @*@Html.ActionLink("Eliminar", "Delete", new { id = item.requerimientoId })*@
                                        }

                                        @if (item.EstadoRequerimiento.nombre != "Con OC parcial" && item.EstadoRequerimiento.nombre != "Con OC total" && item.EstadoRequerimiento.nombre != "Anulado")
                                        {
                                            <a href="~/Requerimiento/Cancel/@Html.DisplayFor(modelItem => item.requerimientoId)" class="btn btn-danger btn-sm"> Anular </a>
                                            @*@Html.ActionLink("Eliminar", "Delete", new { id = item.requerimientoId })*@
                                        }

                                    </td>
                                   
                                    

                                       


                                        @if (item.EstadoRequerimiento.nombre == "Con OC parcial" || item.EstadoRequerimiento.nombre == "Con OC total")
                                        {
                                            <td hidden="hidden">CO</td>
                                        }
                                        else
                                        {
                                            <td hidden="hidden">SO</td>
                                        }

                                    

                                </tr>
                            }



                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Id</th>
                                <th>Obra</th>
                                <th>Fecha</th>
                                <th>Prioridad</th>
                                <th>Creado por</th>
                                <th>Items</th>
                                <th>Tipo de Compra</th>
                                @*<th>Orden Compra</th>*@
                                <th>Estado</th>
                                <th>Materiales</th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th hidden="hidden"></th>

                            </tr>
                        </tfoot>
                    </table>

                </div>
            </div>
        </div>
    </div>

</div>

<div class="modal inmodal" id="myModalTracking" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
            <div class="modal-body">

                <div class="modal-content">

                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar!</button>
            </div>

    </div>
</div> 

<div class="modal inmodal" id="myModalZoom" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-body modal-lg">

            <div class="modal-content">

            </div>

        </div>
        <div class="modal-footer modal-lg">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar!</button>
        </div>

    </div>
</div> 

@section Styles {
  
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
@Styles.Render("~/Content/plugins/chosen/chosenStyles")
@Styles.Render("~/plugins/footableStyles")
}

@section Scripts {

    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/jeditable")
@Scripts.Render("~/plugins/chosen")
@Scripts.Render("~/plugins/footable")

<script type="text/javascript">
    $(document).ready(function () {

        $('.dataTables-example').DataTable({

            dom: '<"html5buttons"B>lTfgitp',
            buttons: [
                { extend: 'copy' },
                { extend: 'csv' },
                { extend: 'excel', title: 'ExampleFile' },
                { extend: 'pdf', title: 'ExampleFile' },

                {
                    extend: 'print',
                    customize: function (win) {
                        $(win.document.body).addClass('white-bg');
                        $(win.document.body).css('font-size', '10px');

                        $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                    }
                }
            ],

            "order": [[0, "desc"]],
            "pageLength": 25,
            scrollY: '85vh',
            "scrollX": true

        });
        // Eventos de filtros

        $('input.column_filter').on('keyup click', function () {
            filterColumn($(this).attr('data-column'));
        });

        $('select.column_filter').on('onchange click', function () {
            filterColumn($(this).attr('data-column'));
        });

        //Filtro de Chosen-select
        var config = {
            '.chosen-select': {},
            '.chosen-select-deselect': { allow_single_deselect: true },
            '.chosen-select-no-single': { disable_search_threshold: 10 },
            '.chosen-select-no-results': { no_results_text: 'Oops, no encontrado!' },
            '.chosen-select-width': { width: "200%" }
            //
        }
        for (var selector in config) {
            $(selector).chosen(config[selector]);
        }

        //Tracking Modal

        $("a[data-target=#myModalTracking]").click(function (ev) {
            ev.preventDefault();
            var target = $(this).attr("href");

            // load the url and show modal on success
            $("#myModalTracking .modal-body").load(target, function () {
                $("#myModalTracking").modal("show");
            });
        });

        $("a[data-target=#myModalZoom]").click(function (ev) {
            ev.preventDefault();
            var target = $(this).attr("href");

            // load the url and show modal on success
            $("#myModalZoom .modal-body").load(target, function () {
                $("#myModalZoom").modal("show");
            });
        });


    });

    function filterColumn(i) {
        $('.dataTables-example').DataTable().column(i).search(
            $('#col' + i + '_filter').val()
        ).draw();
    }




</script>



    }


