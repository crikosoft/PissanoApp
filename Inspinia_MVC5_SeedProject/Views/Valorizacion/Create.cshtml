@section Scripts {
    <script type="text/javascript">
    $(document).ready(function () {


        $("#BtnCalcular").click(function () {

            

            var avanceMetrado = 0;
            var avanceMonto = 0;
            var avancePorc = 0;
            var precioUnitario =0;

            avanceMetrado = $('#avanceMetrado').val();
            avanceMonto = $('#avanceMonto').val();
            avancePorc = $('#avancePorc').val();
            precioUnitario = $('#Contrato_OrdenCompra_OrdenesCompraDetalles_0__precioUnitario').val();
            cantidadTotal =  $('#Contrato_OrdenCompra_OrdenesCompraDetalles_0__cantidad').val();

            if (avanceMetrado != 0)
            {
                avanceMonto = (avanceMetrado * precioUnitario).toFixed(2);
                avancePorc = (avanceMetrado / cantidadTotal * 100).toFixed(2);
            }
            else if (avancePorc != 0)
            {
                avanceMetrado = cantidadTotal * avancePorc / 100;
                avanceMonto = avanceMetrado * precioUnitario;
            }

            $('#lblAvanceMetrado').text(avanceMetrado);
            $("#avanceMetrado").val(avanceMetrado);

            $("#lblAvanceMonto").text(avanceMonto);
            $("#avanceMonto").val(avanceMonto);

            $("#lblAvancePorc").text(avancePorc + " %");
            $("#avancePorc").val(avancePorc);


        });


        $("#BtnGuardar").click(function () {

            var cells = [];

            $('#tablaItems tr').each(function () {

                    cells.push({

                        valorizacionId: $(this).find("td").eq(0).html(),
                        avancePorc: $(this).find("td:eq(4) input[type='text']").val()
                    });
            });

            //alert(cells[0].avancePorc);
            //return;
            var Detalles = [];
            var valorizacion = new Object();

            //for (var i = 0; i < cells.length; i++) {

                valorizacion.valorizacionId = cells[0].valorizacionId;
                valorizacion.avancePorc = cells[0].avancePorc;
                valorizacion.ordenServicioId = $("#ordenServicioId").val();
                //alert(requerimientoDetalle.requerimientoDetalleId);
            //}

                alert(valorizacion.ordenServicioId);

            ValorizacionFinal = JSON.stringify({ 'valorizacion': valorizacion });


            $.ajax({
                contentType: 'application/json; charset=utf-8',
                type: 'POST',
                url: '@Url.Action("SaveValorization")',
                data: ValorizacionFinal,
                success: function (data) {
                    window.location = '@Url.Action("Index")';
                },
                error: function (result) {
                    alert(result.statusText)
                    alert('No se pudo realizar la acción solicitada');

                }
            });
        });

    });
    </script>
}

