@model IEnumerable<PissanoApp.Models.Contrato>

@{
    ViewBag.Title = "Contratos";
}


<h2>Contratos</h2>



@*<p>

        <a href="@Url.Action("IndexApprove", "OrdenCompraViewModel")" class="btn btn-w-m btn-primary">Aprobar</a>
    </p>*@


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Contratos de la Obra. Use el Filtro de Búsqueda</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>

                    </div>
                </div>
                <div class="ibox-content">

                    <table class="table table-stripped table-bordered table-hover dataTables-example " data-page-size="10">
                        <thead>
                            <tr>
                                <th hidden>Id</th>
                                <th>OC</th>
                                <th>Obra</th>
                                <th>Fecha Inicio</th>
                                <th>Proveedor</th>
                                <th>Avance</th>
                                <th>Total</th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {

                                <tr class="gradeX">
                                    
                                    <td hidden>@Html.DisplayFor(modelItem => item.contratoId)</td>
                                    <td class="project-actions">
                                        <span class="label label-primary">@Html.DisplayFor(modelItem => item.OrdenCompra.numero)</span>
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.OrdenCompra.Obra.nombre)</td>
                                    <td>@Html.DisplayFor(modelItem => item.fechaInicio)</td>
                                    <td>@Html.DisplayFor(modelItem => item.OrdenCompra.Proveedor.razonSocial)</td>
                                    <td>@Html.DisplayFor(modelItem => item.OrdenCompra.Moneda.simbolo) @Html.DisplayFor(modelItem => item.avanceMonto)</td>
                                    <td>@Html.DisplayFor(modelItem => item.OrdenCompra.Moneda.simbolo) @Html.DisplayFor(modelItem => item.OrdenCompra.total)</td>

                                    <td>
                                        <a href="~/OrdenCompra/Document/@Html.DisplayFor(modelItem => item.ordenCompraId)" class="btn btn-white btn-sm"><i class="fa fa-print"></i> Imprimir </a>
                                    </td>
                                    <td>
                                        <a href="~/Valorizacion/Index/@Html.DisplayFor(modelItem => item.contratoId)" class="btn btn-white btn-sm"><i class="fa fa-money"></i> Valorizaciones </a>
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.contratoId }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.contratoId }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.contratoId })
                                    </td>
                                  
                                </tr>
                            }


                        </tbody>
                        <tfoot>
                            <tr>
                                <th hidden>Id</th>
                                <th>OC</th>
                                <th>Obra</th>
                                <th>Fecha Inicio</th>
                                <th>Proveedor</th>
                                <th>Avance</th>
                                <th>Total</th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>

                </div>
            </div>
        </div>
    </div>

</div>

@section Styles {

    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/footableStyles")
    @Styles.Render("~/Content/plugins/iCheck/iCheckStyles")
}

@section Scripts {

    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/jeditable")
    @Scripts.Render("~/plugins/footable")
    @Scripts.Render("~/plugins/iCheck")

    <script type="text/javascript">
        $(document).ready(function () {

            $('.dataTables-example').DataTable({
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy' },
                    { extend: 'csv' },
                    { extend: 'excel', title: 'ExampleFile' },
                    { extend: 'pdf', title: 'ExampleFile' },

                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                    .addClass('compact')
                                    .css('font-size', 'inherit');
                        }
                    }
                ],
                "order": [[0, "desc"]]

            });


            $('.footable').footable();

            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });

        });

    </script>
}
