                    <div class="row">

                        <div class="col-sm-3">
                            <div class="form-group">
                                <label class="control-label" for="status">Obra</label>
                                @Html.DropDownList("col2_filter", (IEnumerable<SelectListItem>)ViewBag.obraId, "Todos", new { @class = "form-control column_filter", @data_column = "2" })

                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label class="control-label" for="quantity">Orden</label>
                                <input type="text" id="col1_filter" name="col1_filter" data-column="1" value="" placeholder="Orden" class="form-control column_filter">
                            </div>
                        </div>
                        <div class="col-sm-3">
