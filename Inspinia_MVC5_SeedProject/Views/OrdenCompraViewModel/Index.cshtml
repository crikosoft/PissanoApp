                                        <a href="/RequerimientoViewModel/Create/@Html.DisplayFor(modelItem => item.requerimientoId)" class="btn btn-white btn-sm"><i class="fa fa-folder"></i> Aprobar Orden Compra </a>
                                    </td>*@
                                </tr>
                            }



                        </tbody>
