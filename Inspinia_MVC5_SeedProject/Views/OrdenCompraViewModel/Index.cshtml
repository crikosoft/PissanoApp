                                <label class="control-label" for="status">Estado</label>
                                @Html.DropDownList("col7_filter", (IEnumerable<SelectListItem>)ViewBag.estadoOrdenId, "Todos", new { @class = "form-control column_filter", @data_column = "7" })

                            </div>
                        </div>
                    </div>


