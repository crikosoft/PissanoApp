@model PissanoApp.Models.Movimiento

@{
    ViewBag.Title = "Create";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Movimiento de Materiales</h2>
        <ol class="breadcrumb">
            <li>
                <a href="index.html">Home</a>
            </li>
            <li>
                <a href="~/Materiales/Inventory">Inventario </a>
            </li>
            <li class="active">
                <strong>Movimiento</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="wrapper wrapper-content animated fadeInRight">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.materialNivelStockId)

       

        <div class="row">

            <div class="col-lg-12">

                <div class="ibox">
                    <div class="ibox-title">
                        @*Payment method*@
                    </div>
                    <div class="ibox-content">

                        <div class="panel-group payments-method" id="accordion">

                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <div class="pull-right">
                                        <i class="fa fa-building text-success"></i>
                                    </div>
                                    <h5 class="panel-title">
                                        @*<a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">Credit Card</a>*@
                                        <a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">Ingrese datos de Movimiento</a>

                                    </h5>
                                </div>
                                <div id="collapseTwo" class="panel-collapse collapse in">
                                    <div class="panel-body">

                                        <div class="row">
                                            <div class="col-md-4">
                                                <h2>Resumen</h2>
                                                <strong>Material:</strong>: @Html.DisplayFor(model => model.MaterialNivelStock.Material.nombre) <br />
                                                <strong>Cantidad en Stock:</strong>: <span class="text-navy"> @Html.DisplayFor(model => model.MaterialNivelStock.cantidad)</span><br />
                                                
                                                <p>
                                                    <strong>Almacen:</strong>: <span class="text-warning">@Html.DisplayFor(model => model.MaterialNivelStock.Almacen.Obra.nombre)</span><br />
                                                </p>


                                            </div>
                                            <div class="col-md-8">

                                                <form role="form" id="payment-form">
                                                    <div class="row">
                                                        <div class="col-xs-4">
                                                            <div class="form-group">
                                                                <label>TIPO DE Movimiento</label>
                                                                <div class="input-group">
                                                                    @Html.DropDownList("tipoMovimientoId", (IEnumerable<SelectListItem>)ViewBag.tipoMovimientoId, new { @class = "form-control" })

                                                                    @Html.ValidationMessageFor(model => model.tipoMovimientoId)


                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-xs-8">
                                                            <div class="form-group">
                                                                <label>CANTIDAD</label>
                                                                <div class="input-group">
                                                                    <input type="text" class="form-control" name="cantidad" id="cantidad" placeholder="Cantidad" required />
                                                                    <span class="input-group-addon"><i class="fa fa-question"></i></span>

                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-xs-6">
                                                            <div class="form-group">
                                                                <label>USUARIO SOLICITANTE</label>
                                                                <div class="input-group">
                                                                    <input type="text" class="form-control" name="usuarioSolicitante" id="usuarioSolicitante" placeholder="Usuario Solicitante" required />
                                                                    <span class="input-group-addon"><i class="fa fa-user"></i></span>


                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-xs-6">
                                                            <div class="form-group">
                                                                <label>PARTIDA</label>
                                                                <div class="input-group">
                                                                    @Html.DropDownList("partidaId", (IEnumerable<SelectListItem>)ViewBag.partidaId, new { @class = "form-control" })

                                                                    @Html.ValidationMessageFor(model => model.partidaId)


                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">

                                                        <div class="col-xs-12">
                                                            <div class="form-group">
                                                                <label>COMENTARIO</label>
                                                                
                                                                    <input type="text" class="form-control" name="comentario" id="comentario" placeholder="Comentario Adicional" />

                                                               
                                                            </div>
                                                        </div>
                                                    </div>
                                                   
                                                    <div class="row">
                                                        <div class="col-xs-12">
                                                            <button class="btn btn-primary" type="submit">Guardar!</button>
                                                        </div>
                                                    </div>
                                                </form>

                                            </div>

                                        </div>






                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>

            </div>

        </div>

    </div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
