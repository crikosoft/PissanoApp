@model IEnumerable<PissanoApp.Models.Presupuesto>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>

    <table class="table table-striped">
    @*<table class="table table-hover">*@
        <tr>
            <th>
                Estado
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Obra.direccion)
            </th>
            <th>
                Descripción
            </th>
            <th>
                Tipo Presupuesto
            </th>
            <th>
                Fecha Inicio
            </th>
            <th>
                Moneda
            </th>
            <th>
                Total
            </th>
            <th>
                Avance
            </th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td class="project-status">
                    <span class="label label-primary">Activo</span>
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Obra.direccion)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoPresupuesto.descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Moneda.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.total)
                </td>
                <td class="project-completion">
                    <small>Completado al: 30%</small>
                    <div class="progress progress-mini">
                        <div style="width: 30%;" class="progress-bar"></div>
                    </div>
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.presupuestoId }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.presupuestoId }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.presupuestoId })
                </td>
                <td class="project-actions">                    
                    <a href="PresupuestoTitulosViewModel/Create/@Html.DisplayFor(modelItem => item.presupuestoId)" class="btn btn-white btn-sm"><i class="fa fa-folder"></i> Organizar Títulos </a>                    
                </td>

                <td class="project-actions">
                    <a href="PresupuestoTitulosViewModel/Create/@Html.DisplayFor(modelItem => item.presupuestoId)" class="btn btn-white btn-sm"><i class="fa fa-folder"></i> Organizar Partidas </a>
                </td>

                <td class="project-actions">
                    <a href="PresupuestoTitulosViewModel/Create/@Html.DisplayFor(modelItem => item.presupuestoId)" class="btn btn-white btn-sm"><i class="fa fa-pencil"></i> APU </a>
                </td>

                <td class="project-actions">
                    @*<a href="#" class="btn btn-white btn-sm"><i class="fa fa-folder"></i> Crear Items </a>*@
                    <a href="PresupuestoViewModel/Edit/@Html.DisplayFor(modelItem => item.presupuestoId)" class="btn btn-white btn-sm"><i class="fa fa-pencil"></i> Crear Items </a>
                    @*<a href="@Url.Action("Edit/1", "PresupuestoViewModel")" class="btn btn-white btn-sm"><i class="fa fa-pencil"></i> Crear Items </a>*@
                </td>

            </tr>
        }

    </table>

