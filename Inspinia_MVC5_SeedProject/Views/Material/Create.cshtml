@model PissanoApp.Models.Material

@{
    ViewBag.Title = "Create";
}

<h2>Nuevo Material</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Material</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.nombre, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombre)
                @Html.ValidationMessageFor(model => model.nombre)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.codigo, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.codigo)
                @Html.ValidationMessageFor(model => model.codigo)
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.unidadMedidaId, "unidadMedidaId", new { @class = "control-label col-md-2" })*@
            <div class="control-label col-md-2">
                Unidad de Medida
            </div>
            <div class="col-md-10">
                @Html.DropDownList("unidadMedidaId", String.Empty)
                @Html.ValidationMessageFor(model => model.unidadMedidaId)
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.tipoMaterialId, "tipoMaterialId", new { @class = "control-label col-md-2" })*@
            <div class="control-label col-md-2">
                Tipo Material
            </div>
            <div class="col-md-10">
                @Html.DropDownList("tipoMaterialId", String.Empty)
                @Html.ValidationMessageFor(model => model.tipoMaterialId)
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.materialPadreId, "materialPadreId", new { @class = "control-label col-md-2" })*@
            <div class="control-label col-md-2">
                Material Padre
            </div>
            <div class="col-md-10">
                @Html.DropDownList("materialPadreId", String.Empty)
                @Html.ValidationMessageFor(model => model.materialPadreId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

